@require './config'

body
  background $grey

/* Headings
-----------------------------------------------------------------------------*/
h1
  padding-bottom 10px
  border-bottom 2px solid rgba(0, 0, 0, 0.05)

h2
  border-bottom 0

/* Page
-----------------------------------------------------------------------------*/
.page
  background $grey

.content
  background #fff
  box-shadow 0 1px 2px rgba(201, 211, 223, .5)
  border 1px solid $grey

.page-nav > .inner
  padding-top 5px
  border-top 2px solid $red

.navbar
  background $accentColor
  border-bottom 4px solid $red
  color white

  .site-name
    color white

  .links
    background $accentColor

.nav-links a:hover
  border-bottom 1px solid white
  color white

/* Sidebar
-----------------------------------------------------------------------------*/
.sidebar
  border-right 0

a.sidebar-link
  padding .75rem 1rem .75rem 1.25rem

  .sidebar-group &
    padding-left 1.25rem

  &.active
    background $grey

  .sidebar-sub-header &
    color lighten($textColor, 30%)
    &.active, &:hover
      color $accentColor

.sidebar-sub-headers
  a.sidebar-link
    padding-top .5rem
    padding-bottom .5rem

    &.active
      background none
